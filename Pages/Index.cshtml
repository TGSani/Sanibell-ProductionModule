@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div>Selecteer uw profiel</div>

<!-- hier word voor elke user een tile aangemaakt -->
@foreach (Models.Users users in Model.Users) {
    <div class="tile">
        <h4>@users.Naam</h4>
        <p>@users.Rol</p>
    </div>
}