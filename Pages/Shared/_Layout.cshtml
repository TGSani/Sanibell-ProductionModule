<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Sanibell Production</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <div class="sanibell-container">
            <h4 class="sanibell-header-text">SANIBELL</h4>
        </div>
        <div class="title-container">
            <h4 class="page-title">@ViewData["Title"]</h4>
        </div>

        @{
            // Lees de flags uit ViewData
            bool showBackButton = ViewData["ShowBackButton"] as bool? ?? false;
            bool showLogoutButton = ViewData["ShowLogoutButton"] as bool? ?? false;
        }

        @* Alleen laten zien als een van de buttons actief is *@
        @if (showBackButton)
        {
            <button onclick="history.back()" class="header-buttons">
                <img class="icon" src="icons/Back.png" />
            </button>
        }
        else if (showLogoutButton)
        {
            <a asp-page="/Index" class="header-buttons">
                <img class="icon" src="icons/Log_out.png" />
            </a>
        }
    </header>
    <div class="RenderBody">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div>

            &copy; @DateTime.UtcNow.Year SANIBELL - Production Module
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>